/* Defualt Element Style */
QWidget { 
    background-color:#F8F8FF;
}

QScrollArea {
    background-color: white;
    border: none;
    border-radius: 10px;
}

QLabel {
    color: #1A374D;
    background-color: none;
}

QLineEdit { 
    background-color: #DDDDDD;
    border-radius: 0px;
    color: black;
    padding-left: 10px; 
}

QRadioButton {
    background-color: white;
    color:#1A374D;
}

/* Special Element Style */

/* QWidget */
QWidget#container {
    background-color: white;
    border-radius: 10px;
}

QWidget#option {
    background-color: none;
}
/* QLabel */
QLabel#page_name {  /* Page's Name */
    color: #1A374D;
    background-color:transparent;
}

QLabel#employee_acc_list_label {
    border-radius: 10px;
    padding-top: 10px;
}

QLabel#h1 {
    color: #406882; 
    background-color: none;
}

QLabel#line_break_top_bottom {
    border-top: 1px solid black; 
    border-bottom: 1px solid black; 
    background-color: none;
}

QLabel#line_break_top {
    border-top: 1px solid black; 
    background-color: none;
}

QLabel#legend {
    background-color: none; 
    color: black;
}

QLabel#guide {
    background-color: white; 
    color: black;
}

/* QRadioButton */
QRadioButton#btn_create_admin {
    background-color:white;
    color:#1A374D;
}

/* QPushButton */
QPushButton#yellow_btn {
    color: white;
    background-color: #FDCB6E;
    border-radius: 10px;
}

QPushButton#disable_yellow_btn {
    color: #EBEBEB;
    background-color: #E7B861;
    border-radius: 10px;
}